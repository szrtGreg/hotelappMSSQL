@model hotelapp.Web.Models.RoomListViewModel

<div class="row">
    <div class="col-lg-12">
        <div class="row">
                    @foreach (var room in Model.RoomLists)
                    {
                            <div class="card col-lg-4">
                                <div class="card-block">
                                    <h4 class="card-title">@room.RoomNumber</h4>
                                    <h6 class="card-subtitle mb-2 text-muted">Id: @room.Id</h6>
                                    <h6 class="card-subtitle mb-2 text-muted">Category: @room.Title</h6>
                                    <h6 class="card-subtitle mb-2 text-muted"> Price: @string.Format("{0:C}", room.Price)</h6>
                                    <a asp-action="Update" asp-route-id="@room.Id" title="Edit room" class="card-link">Update</a>
                                </div>
                            </div>

                    }
            </div>
    </div>
</div>